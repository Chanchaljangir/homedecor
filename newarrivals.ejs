<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> </title>
    <link rel="stylesheet" href="./css/homepage.css" type="text/css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <style type="text/css">

        .modal{
            border: 1px solid black;
            width: 350px;
            min-height: 330px;
            display: none;

            position: fixed;
            margin-left: 500px;
            margin-top: 100px;
           
            background-color: gray;
            padding: 10px;
            
        } 
        
        input[name=txtemail], input[name=txtpass] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        button[id=closebtn],input[name=btnsignin] {
            background-color: #04AA6D;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 40%;
        }

     
        .img1{
            padding: 10px;
        }
        .img2{
            padding: 10px;
        }
        .img3{
            padding: 10px;
        }
        .img4{
            padding: 10px;
        }
        .img5{
            padding: 10px;
            transform:translateY(-5px) ;
            transition: transform 0.5s;
        }

        .img5:hover{
            transform: translateY(-5px);
        }
        .img6{
            padding: 10px;
        }
        .img7{
            padding: 10px;
        }
        .img8{
            padding: 10px;
        }
        .img9{
            padding: 10px;
        }
        .img10{
            padding: 10px;
        }
        .center
        {
            position:center;
        }
        .btn{
            display: inline-block;
            background: #ff523b;
            color: #fff;
            padding: 8px 30px;
            margin: 30px 0;
            border-radius: 30px;
            transition: background 0.5s;
        }

        .btn:hover{
            background: #563434;
        }

        .button{
            text-align: center;    
        }
    
        </style>
</head>

<body>
    
    <header>
        <%- include('./header'); %>
    </header>

    <div class="modal" id="myModal">
        <h1>Sign In</h1>
        <div class="modal-content">

            
            <label>Email : </label>
            <input type="text" name="txtemail" ><br><br>
            <label>Password :</label>
            <input type="password" name="txtpass"><br>
            <input type="submit" name="btnsignin" value="Sign In">
            <button id="closebtn">close</button><br>
            <a href="register">Create Account</a>
            <a href="forgotpassword">Forgot Password</a>
        </div>
    </div>

    <div class="box-4col">
        <% results.forEach(function(rs){ %>
        <div class="box">
            <div class="box-in">
                <img src="<%=rs.productimgurl %>" height="230px" width="230px" class="img1">
                <a  class="link">
                    <h3>
                        <%=rs.brand %>
                    </h3>
                    <h3>
                        <%=rs.producttypename %>
                    </h3>
                    <h4>Â£ <%=rs.price %>
                    </h4>
                    <input type="submit" name="bedsheet1" value="add to cart" class="btn"
                    onclick='return cartAlert()'>
                  
                </a>
            </div>
        </div>
        <%})%>
    </div>
    
    <script>
        var modal = document.getElementById("myModal");
        var btn = document.getElementById("mybtn");
        var closebtn=document.getElementById("closebtn");

        function openpopup()
        {       
            modal.style.display="block";
        }
        closebtn.onclick = function()
        {
            modal.style.display="none";
        }
        function cartAlert() {
            alert("Please signIn first");
        }
    </script>

    <footer>
        <%- include('./footer'); %>
    </footer>
</body>

</html>