        .button{
            text-align: center;
            
        }

        .modal{
            border: 1px solid black;
            width: 350px;
            min-height: 330px;
            display: none;
           
            position: fixed;
            margin-left: 500px;
            margin-top: 100px;
           
            background-color: gray;
            padding: 10px;
            
        } 
        
        input[name=txtemail], input[name=txtpass] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        button[id=closebtn],input[name=btnsignin] {
            background-color: #04AA6D;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 40%;
        }

        #mybtn
        {
            padding: 2px 10px;
            color: white;
            outline: none;
            border: none;
            font-size: 21px;
            background-color: transparent;
        }

        .table
        {
            margin: 0 auto;
            margin-top: 10%;
            background-color: pink;
           
        }
