<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>View product</title>
        <link rel="stylesheet" href="./css/homepage.css">
        <link rel="stylesheet" href="./css/viewproduct.css">
       
    </head>
    <body>
        <header>
            <%- include('./adminheader'); %>
        </header>
        <div class="table">
        <table class="table table-striped" id="mytable" border="1">
            <thead>
                <h2>Details of Product Type</h2>
                <tr height="10px" width="20px">
                    <th>Product Type Id</th>
                  <th>Category</th>
                  <th>Product Type</th>
                  <th>Size</th>
                  <th>Edit</th>
                  <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <%
                results.forEach(function(rs){
                %>
              <tr height="10px" width="20px">
                <td><%=rs.producttypeid %></td>
                <td><%=rs.categoryid %></td>
                <td><%=rs.producttypename %></td>
                <td><%=rs.sizeid %></td>
                <td><a href="updateproducttype?producttypeid=<%=rs.producttypeid%>"><button class="edit"><img src="./images/edit icon.jpg" width="20" height="20" alt="" class="img"></button></a></td>
                <td><a href="deleteproducttype?producttypeid=<%=rs.producttypeid %>"  onclick='return checkdelete()'><button class="delete"><img src="./images/deleteicon.png"width="20" height="20" alt="" class="img"></button></a></td>

              </tr> 

              <%})%>
            </tbody>
           </div>
          </table>
    
               <script>
                    
                function checkdelete()
                {
                    return confirm('Are you sure you want to DELETE this record');
                }
          </script>      
    </body>
</html>

