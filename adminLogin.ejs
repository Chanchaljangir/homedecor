    <header>
        <div class="content">


    </header>
    <div class="modal" id="myModal">
        <h1>Sign In</h1>
        <div class="modal-content">
            <form action="/btnAdminsignin" method="GET">

                <label>Email : </label>
                <input type="text" name="txtemail" required /><br><br>
                <label>Password :</label>
                <input type="password" name="txtpass" required /><br>
                <input type="submit" name="btnsignin" id="signinBtn" value="Sign In">

                <button id="closebtn">close</button><br>
                <!-- <a href="register">Create Account</a> -->
                <a href="javascript:void(0)" onclick='return showRegtrationModel()'>Create Account</a>
                <a href="javascript:void(0)" onclick='return changePasswordModel()'>Forgot Password</a>
            </form>

        </div>
    </div>
    <div class="regModal" id="registerationModal">
        <h1>Registration</h1>
        <div class="modal-content">
            <form action="/btnAdminregsubmit" method="POST">
                <label>First Name : </label>
                <input type="text" name="txtfn" required><br>
                <label>Last Name :</label>
                <input type="text" name="txtln" required><br>
                <label>Mobile No :</label>
                <input type="text" name="txtmn" required><br>
                <label>Email : </label>
                <input type="text" name="txtemail" required><br>
                <label>Password :</label>
                <input type="password" name="txtpass" required><br>
                <input type="submit" name="btnregsubmit" value="Submit">
                <a href="back">Back</a>
            </form>
        </div>
    </div>

    <div class="modal" id="changePassModel">
        <h1>Sign In</h1>
        <div class="modal-content">
            <form action="/changePassword" method="GET">

                <label>Email : </label>
                <input type="text" name="txtemail" required /><br><br>
                <label>Changes Password :</label>
                <input type="password" name="txtpass" required /><br>
                <input type="submit" name="btnsignin" id="signinBtn" value="Save">

                <button id="closebtn">close</button><br>
            </form>

        </div>
    </div>
    <script>

        var modal = document.getElementById("myModal");
        var btn = document.getElementById("mybtn");
        var closebtn = document.getElementById("closebtn");
        //var closeSignIn = document.getElementById("signinBtn")
        modal.style.display = "block";
        function openpopup() {
            modal.style.display = "block";
        }
        closebtn.onclick = function () {
            modal.style.display = "none";
        }
        // closeSignIn.onclick = function () {
        //     modal.style.display = "none";
        // }
        function showInput() {
            document.getElementById("registerationModal").style.display = "none"
            return confirm("Thank you for register");
        }
        function showRegtrationModel() {
            modal.style.display = "none";
            var modal1 = document.getElementById("registerationModal");
            modal1.style.display = "block";
        }
        function changePasswordModel() {
            modal.style.display = "none";
            var modal1 = document.getElementById("changePassModel");
            modal1.style.display = "block";
        }
    </script>
</body>

