            box-sizing: border-box;
        }

        button[id=closebtn],
        button[name=btnregsubmit],
        input[name=btnsignin] {
            background-color: #04AA6D;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 40%;
        }

        #mybtn {
            padding: 2px 10px;
            color: white;
            outline: none;
            border: none;
            font-size: 21px;
